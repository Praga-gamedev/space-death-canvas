{
    "compilerOptions": {
        "lib": ["dom", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "importHelpers": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "declaration": false,
        "sourceMap": false,
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "src/*": ["./src/*"],
            "@images": ["./public/assets/images/*"],
            "@components/*": ["./src/components/*"],
            "@types/*": ["./src/types/*"],
            "@store/*": ["./src/store/*"]
        },
        "typeRoots": ["src/types/**/*.d.ts", "node_modules/@types"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/types/**/*.d.ts",
        "./node_modules/@types"
    ],
    "exclude": ["**/*.js", "node_modules"]
}
